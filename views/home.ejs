<%- include("partials/header"); -%>

<h1>Home</h1>
<p><%= homeStartingContent %></p>

<!-- Display all posts -->
<% posts.forEach(function(post) { %>
    <h2><%= post.postTitle %></h2>
    <p>
      <%= post.postBody.slice(0,100) + " ..." %>
      <a href="/posts/<%= post._id %>">Read more</a>
    </p>
<% }); %>

<%- include("partials/footer"); -%>
