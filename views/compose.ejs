<%- include("partials/header"); -%>
<h1>Compose</h1>
<form action="/compose" method="post">
  <div class="form-group">
    <label for="post-title">Title</label>
    <input class="form-control" id="post-title" type="text" name="postTitle" value="" required>
  </div>
  <div class="form-group">
    <label for="post-body">Post</label>
    <textarea id="post-body" class="form-control" name="postBody" rows="8" cols="80" required></textarea>
  </div>
  <button class="btn btn-primary" type="submit" name="button">Publish</button>
</form>
<%- include("partials/footer"); -%>
